extends ../layout

block content
  h1= title
  
  form(method="post" action="/patients/#{patientID}/edit")
    input(type="text", name="name", placeholder="Name...")
    input(type="number", name="age", placeholder="Age...")
    input(type="text", name="gender", placeholder="Gender...")
    input(type="number", name="height", placeholder="Height (in)")
    input(type="submit" method="post" value="Edit Patient")
